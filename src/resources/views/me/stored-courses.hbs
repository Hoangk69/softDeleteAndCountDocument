<div class="mt-4">
    <div>
      <h3>My courses</h3>
      <a href="/me/recycleBin/courses" class="btn btn-secondary">Recycle Bin <span class="count-delete-documents">{{deleteCourses}}</span></a>
    </div>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Created at</th>
            <th scope="col" style="text-align: center;">Option</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.createdAt}}</td>
                <td style="text-align: center;">
                    <a href="/courses/{{this._id}}/edit" class="btn btn-primary" role="button">Update</a>
                    <a href="/courses/{{this._id}}/edit" class="btn btn-danger" role="button" data-id="{{this._id}}" data-toggle="modal" data-target="#exampleModal">Delete</a>
                    {{!-- <a href="" class="btn btn-link">Delete</a> --}}
                </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                You have not created any courses yet.
                <a href="/courses/creat" class="btn btn-primary">Click creat courses</a>
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!-- confirm delete --}}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Do you want to delete course ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button id="btn-delete" type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>

 {{!-- form hindden delete --}}
<form name="delete-form" method="POST"></form>
<script>
    document.addEventListener('DOMContentLoaded', function(){
        var courseId;
        var deleteForm = document.forms['delete-form'];
        var btnDelete = document.getElementById('btn-delete');

        $('#exampleModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        courseId = button.data('id');
        console.log(courseId);
        });
      
        btnDelete.onclick = function(){
            deleteForm.action = '/courses/'+ courseId + '?_method=DELETE';
            deleteForm.submit();
        }
    })
    
</script>